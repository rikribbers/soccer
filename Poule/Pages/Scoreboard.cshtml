@page
@model Poule.Pages.ScoreboardModel
@{
    Layout = "_LayoutPoule";
    ViewBag.Title = "Scorebord";
    ViewData["ActivePage"] = "Scoreboard";
}
<p></p>
<div class="container">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>Volgorde</th>
            <th>Datum</th>
            <th>Thuisteam</th>
            <th>Uitteam</th>
            <th>Ruststand</th>
            <th>Eindstand</th>
            @foreach (var u in Model.Users)
            {
                <th>@u.Name</th>
            }
        </tr>
        <tr>
            <th colspan="5"></th>
            <th>Totaal</th>
            @foreach (var u in Model.Users)
            {
                <th>@Model.TotalScores[u.Id]</th>
            }
        </tr>
        </thead>
        <tbody>
        @foreach (var game in Model.Games)
        {
            <tr>
                <td>@game.Order</td>
                <td>@game.Date</td>
                <td>@game.HomeTeam</td>
                <td>@game.AwayTeam</td>
                <td>@game.HalftimeScore</td>
                <td>@game.FulltimeScore</td>
                @foreach (var u in Model.Users)
                {
                    var p = Model.GetScoreForUser(game, u.Id);

                    <td nowrap>
                        <div><small>r: </small>@p.HalftimeScore</div>
                        <div><small>e: </small>@p.FulltimeScore</div>
                        <div><small>p: </small>@p.Points</div>
                    </td>
                }
            </tr>
        }

        </tbody>
        <tfoot>
        <tr>
            <th colspan="5"></th>
            <th>Totaal</th>
            @foreach (var u in Model.Users)
            {
                <th>@Model.TotalScores[u.Id]</th>
            }
        </tr>
        </tfoot>
    </table>
</div>